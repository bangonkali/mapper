{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "composite": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@dash/qr": ["libs/qr/src/index.ts"],
      "@dash/common-ui": ["libs/common-ui/src/index.ts"],
      "@dash/mapper-ui": ["libs/mapper-ui/src/index.ts"],
      "@dash/tagger-ui": ["libs/tagger-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
